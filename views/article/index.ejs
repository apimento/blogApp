<h1>Articles</h1> 

<table table class="table table-striped"> 
    <tr>
        <th>Title</th> 
        <th>Content</th>
        <th>isPublished</th> 
        <th>Total words</th>
        <th>Author</th>  
        <th>Created</th>
        <th>Actions</th> 
        <th>   </th>
    </tr> 

    <% articles.forEach(function(article) { %>
    <tr>
        <td> 
            <a href="/article/detail?id=<%= article.id%>">
            <%=article.title %> </a>
        </td> 
        <td> <%=article.content %> </td>
        <td> <%=article.isPublished %> </td> 
        <td> <%=article.totalWords %> </td>
        <td> <%=article.author.name %> </td>   
        <td> <%=moment(article.createdAt).fromNow() %> </td>

        <td>
            <a href="/article/edit?id=<%=article.id %>">Edit</a>
        </td> 
        <!-- <td>
            <a href="/article/delete?id=<%=article.id %>">Delete</a>
        </td> --> 
       <td> 
           <form method="POST" action="/article/delete?id=<%= article._id
    %>&_method=DELETE">
      <button type="submit">Delete</button>
    </form>
       </td>
        
    </tr>

    <% }) %>
</table>